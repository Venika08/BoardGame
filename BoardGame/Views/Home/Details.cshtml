@using WebMatrix.Data

@{
    ViewBag.Title = "Detail";

    var id = Request.QueryString["id"];

    var db = Database.Open("BoardGame");

    var sql = "SELECT * FROM BoardGame WHERE BGGId = @0";
    var game = db.QuerySingle(sql, id);
}

<div class="py -1 mt-2 bg-light text-center">
    <h2 class="text-center">Board Game Details</h2>
</div>

@if (game != null)
            {
                <div class="container my-4">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow-sm">
                                <img sec="@game.ImagePath" class="card-img-top" alt="@game.Name" style="height:250px; object-fit:cover;" />
                                <div class="card-body">
                                    <h3 class="card-title">@game.Name</h3>
                                    <p class="card-text">@game.Description</p>
                                    <ul class="list-unstyled">
                                        <li><strong>Year Published:</strong> @game.YearPublished</li>
                                        <li><strong>Family:</strong> @game.Family</li>
                                        <li><strong>Minimum Players:</strong> @game.MinPlayers</li>
                                        <li><strong>Maximum Players:</strong> @game.MaxPlayers</li>
                                        <li><strong>Recommended Age:</strong> @game.MfgAgeRec</li>
                                        <li><strong>Language Ease:</strong>@game.LanguageEase</li>
                                        <li><strong>Ranking:</strong> @game.RankInboardgame</li>
                                    </ul>
                                    <a href="/Home/Index" class="btn btn-primary">Back to Index Page</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <h3 class="text-danger text-center mt-4">Oops! No board game found</h3>
            }


